{
  "name": "@comsaurus/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "projects/**",
    "tools/**"
  ],
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean:all": "npm run clean:dist && npm run clean:node_modules",
    "clean:node_modules": "rm -rf node_modules **/**/node_modules",
    "clean:dist": "rm -rf target **/dist",
    "lint:config": "eslint *.js",
    "lint:global": "npm run lint:config -- --cache --cache-location './dist/.eslintcache' && npm run prettier:global:check",
    "lint:global:fix": "npm run lint:config -- --fix && npm run prettier:global:fix",
    "prettier:global:check": "prettier --ignore-path ./.gitignore --check \"./**/*.{yml,yaml,json,md}\"",
    "prettier:global:fix": "prettier --ignore-path ./.gitignore --write \"./**/*.{json,yml,yaml,json,md}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "~17.1.2",
    "@commitlint/config-conventional": "~17.1.0",
    "@comsaurus/eslint-config-base": "*",
    "@comsaurus/eslint-config-base-prettier": "*",
    "commitizen": "4.2.5",
    "commitlint-config-jira": "1.6.4",
    "commitlint-plugin-jira-rules": "1.6.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.18.0"
}
